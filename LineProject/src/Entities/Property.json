{
    "name": "Property",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Nome della propriet\u00e0"
      },
      "description": {
        "type": "string",
        "description": "Descrizione dettagliata"
      },
      "price": {
        "type": "number",
        "description": "Prezzo in euro"
      },
      "location": {
        "type": "string",
        "description": "Citt\u00e0/Localit\u00e0"
      },
      "country": {
        "type": "string",
        "description": "Paese"
      },
      "coordinates": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          }
        }
      },
      "style": {
        "type": "string",
        "enum": [
          "villa",
          "penthouse",
          "castello",
          "tenuta",
          "appartamento",
          "yacht"
        ],
        "description": "Stile architettonico"
      },
      "bedrooms": {
        "type": "number"
      },
      "bathrooms": {
        "type": "number"
      },
      "sqm": {
        "type": "number",
        "description": "Metri quadrati"
      },
      "features": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Caratteristiche (piscina, spa, etc.)"
      },
      "images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "URL delle immagini"
      },
      "featured": {
        "type": "boolean",
        "default": false
      },
      "status": {
        "type": "string",
        "enum": [
          "disponibile",
          "riservato",
          "venduto"
        ],
        "default": "disponibile"
      }
    },
    "required": [
      "title",
      "price",
      "location",
      "country"
    ]
  }
  
  